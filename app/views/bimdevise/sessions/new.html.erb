
  <h1 class="well" style="text-align: center">Se connecter</h1>
  <div class="col-lg-12 well">
    <div class="row">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


          <div class="col-sm-12">
            <div class="row">

              <div class="col-sm-6 col-sm-offset-3 form-group">
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Votre E-mail' %>

              </div>

            </div>
          </div>

          <div class="col-sm-12">
            <div class="row">

              <div class="col-sm-6 col-sm-offset-3 form-group">
                <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'Votre mot de passe' %>

              </div>

            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="col-sm-12">
              <div class="row">

                <div class="col-sm-6 col-sm-offset-3 form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "Se rappeler de moi" %>

                </div>

              </div>
            </div>
          <% end %>

          <div class="col-sm-12">
            <div class="row">

              <div class="col-sm-6 col-sm-offset-3 form-group">
                <%= f.submit "Se connecter", class: 'btn btn-primary' %>

              </div>

            </div>
          </div>

<% end %>
</div>

<div class="wel">
  <%= render "devise/shared/links" %>
</div>
