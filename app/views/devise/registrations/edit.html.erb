<h2>Les paramètre du compte </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>En attente de confirmation pour votre e-mail: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Mot de passe" %> <i>(Laisser vide si vous ne voulez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> charactères minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Mot de passe actuel" %> <i>(Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
    <div class="field">
      <%= f.label :genre, "Genre" %><br />
      <%= select_tag(:genre, options_for_select([['homme', 1], ['femme', 2]])) %>

    </div>

    <div class="field">
      <%= f.label :birthday, "Date de naissance" %><br />
      <%= f.date_field :birthday, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :city, "Ville" %><br />
      <%= select_tag(:city, options_for_select([['Lisbon', 1], ['Madrid', 2]])) %>

    </div>
    <div class="field">
      <%= f.label :taille, "Taille" %><br />
      <%= f.number_field :taille %>

    </div>
    <div class="field">
      <%= f.label :poids, "Poids" %><br />
      <%= f.number_field :poids %>

    </div>

    <div class="field">
      <%= f.label :situation, "Votre Situation" %><br />
      <%= f.text_area :situation, autofocus: true  %>

    </div>

    <div class="field">
      <%= f.label :annonce, "Votre annonce" %><br />
      <%= f.text_area :annonce,autofocus: true  %>

    </div>


    <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div>
<% end %>

<h3>Supprimer votre compte</h3>

<p>Déçu par le site? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Vous etes sure?" }, method: :delete %></p>

<%= link_to "Retour en arrière", :back %>
