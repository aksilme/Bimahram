                <%= f.select(:q3, options_for_select([['Homme', 1], ['Femme', 2]]), {}, {class: "form-control"}) %>
              </div>

              <div class="col-sm-6 form-group">
                <b>Question 4: </b> <br>
                <%= f.select(:q4, options_for_select([['Homme', 1], ['Femme', 2]]), {}, {class: "form-control"}) %>
              </div>

            </div>
          </div>


          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-6 form-group">
                <b>Question 5: </b> <br>
                <%= f.select(:q5, options_for_select([['Homme', 1], ['Femme', 2]]), {}, {class: "form-control"}) %>
              </div>

              <div class="col-sm-6 form-group">
                <b>Question 6: </b> <br>
                <%= f.select(:q6, options_for_select([['Homme', 1], ['Femme', 2]]), {}, {class: "form-control"}) %>
              </div>

            </div>
          </div>


          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-6 form-group">
                <b>Question 7: </b> <br>
                <%= f.select(:q7, options_for_select([['Homme', 1], ['Femme', 2]]), {}, {class: "form-control"}) %>
              </div>

              <div class="col-sm-6 form-group">
                <b>Question 8: </b> <br>
                <%= f.select(:q8, options_for_select([['Homme', 1], ['Femme', 2]]), {}, {class: "form-control"}) %>
              </div>

            </div>
          </div>

          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-6 form-group">
                <b>Question 9: </b> <br>
                <%= f.select(:q9, options_for_select([['Homme', 1], ['Femme', 2]]), {}, {class: "form-control"}) %>
              </div>

              <div class="col-sm-6 form-group">
